
@model DapperMVC.Models.Employee

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>UpdateView</title>
</head>
<body>
    <div class="container-fluid"> 
        <div class=" row justify-content-center">
            <div class="col-md-5 border mt-5">
                <h1 class="text-center">Update Employee</h1>
                <form action="/Employee/UpdateData" method="post">
                    <input type="hidden" name="Id" value=@Model.Id />
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Name:</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" value=@Model.Name name="Name" required>
                        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Email:</label>
                        <input type="Email" class="form-control" id="exampleInputPassword1" value=@Model.Email name="Email" required>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Phone:</label>
                        <input type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value=@Model.Phone name="Phone" required>
                        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <label for="exampleInputEmail1">Select the Skills:</label><br /><br />
                    <div class="btn-group mb-3 " role="group" aria-label="Basic checkbox toggle button group">
                        <input type="checkbox" class="btn-check" id="btncheck1" name="AddSkill" value="Java" autocomplete="off">
                        <label class="btn btn-outline-primary" for="btncheck1">Java</label>

                        <input type="checkbox" class="btn-check" id="btncheck2" name="AddSkill" value="C#" autocomplete="off">
                        <label class="btn btn-outline-primary" for="btncheck2">C#</label>

                        <input type="checkbox" class="btn-check" id="btncheck3" name="AddSkill" value="C++" autocomplete="off">
                        <label class="btn btn-outline-primary" for="btncheck3">C++</label>

                        <input type="checkbox" class="btn-check" id="btncheck4" name="AddSkill" value="C" autocomplete="off">
                        <label class="btn btn-outline-primary" for="btncheck4">C</label>

                        <input type="checkbox" class="btn-check" id="btncheck5" name="AddSkill" value="Python" autocomplete="off">
                        <label class="btn btn-outline-primary" for="btncheck5">Python</label>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Adderess</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" value=@Model.Adderess name="Adderess" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>

            </div>

        </div>
    </div>
</body>
</html>
